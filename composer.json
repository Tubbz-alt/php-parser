{
    "minumum-stability": "dev",
    "name": "haijin/parser",
    "description": "Framework to easily implement recursive descendent parsers using a simple and expressive DSL.",
    "keywords": ["parser", "recursive descendent parser", "grammar", "bnf"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/haijin-development/php-parser",
    "authors": [
        {
            "name": "Haijin Development",
            "email": "haijin.development@gmail.com",
            "homepage": "https://github.com/haijin-development",
            "role": "developer"
        }
    ],
    "repositories": {
        "haijin/specs": {
            "type": "path",
            "url": "../php-specs",
            "options": {
            "symlink": true
            }
        },
        "haijin/tools": {
            "type": "path",
            "url": "../php-tools",
            "options": {
            "symlink": true
            }
        }
    },
    "require": {
        "php": ">=7.1.0",
        "haijin/tools": "dev-development"
    },
    "require-dev": {
        "haijin/specs": "dev-development",
        "phpunit/php-code-coverage": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Haijin\\Parser\\": ["src/"]
        }
    },
    "scripts": {
        "specs": "php ./vendor/bin/specs"
    }
}